      "cat",
      "ls",
      "mkdir",
      "rm",
      "cp",
      "mv",
      "chmod",
      "chown",
      "tar",
      "zip",
      "unzip",
      "echo",
      "printf",
      "date",
      "sleep",
      "kill",
      "pkill",
      "ps",
